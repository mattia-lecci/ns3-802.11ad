BootStrap: docker
From: ubuntu:18.04

%files
    sem-0.2.3-py3-none-any.whl

%post
    export DEBIAN_FRONTEND=noninteractive
    apt-get -y update
    apt-get install -y \
    # Base requirements
    git gcc g++ python3 python3-pip \ 
    # Additional features
    libboost-all-dev libxml2-dev libgsl-dev \
    libgcrypt-dev libgtk-3-dev python3-dev \
    # Debugging and Formatting
    gdb valgrind clang-format \
    # Statistics framework
    sqlite sqlite3 libsqlite3-dev \
    # Packet inspection
    tcpdump wireshark && \ 
    # Cleanup
    rm -rf /var/lib/apt/lists/*

    pip install matplotlib numpy pandas pyparsing python-dateutil scipy setuptools pyshark

%environment
    export LC_ALL=C

%runscript
    echo "Nothing to do"

%labels
    Author leccimat